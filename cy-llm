#!/usr/bin/env bash
# Main wrapper for CY-LLM CLI; forwards to the implementation.
set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
if [[ -f "$SCRIPT_DIR/ew" ]]; then
  # Forward to implementation script
  exec "$SCRIPT_DIR/ew" "$@"
else
  echo "cy-llm requires the implementation script to be present in repo root." >&2
  exit 1
fi
