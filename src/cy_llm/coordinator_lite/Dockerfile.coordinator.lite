FROM python:3.11-slim

WORKDIR /app

COPY CY_LLM_Backend/coordinator_lite/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

COPY CY_LLM_Backend /app/CY_LLM_Backend

ENV PYTHONPATH=/app/CY_LLM_Backend
ENV WORKER_GRPC_ADDR=worker:50052

EXPOSE 50051

CMD ["python", "-m", "coordinator_lite.app.server"]
