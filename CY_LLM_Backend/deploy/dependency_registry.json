{
  "version": "1.0.0",
  "description": "CY-LLM Engine Dependency Compatibility Matrix",
  "last_updated": "2026-02-10",
  "hardware_profiles": {
    "nvidia_ampere": {
      "vendor": "nvidia",
      "min_compute_capability": "8.0",
      "examples": ["A100", "A30", "RTX 3090", "RTX 4090"],
      "cuda_version": "12.4"
    },
    "nvidia_ada": {
      "vendor": "nvidia",
      "min_compute_capability": "8.9",
      "examples": ["RTX 4090", "L40"],
      "cuda_version": "12.4"
    },
    "nvidia_turing": {
      "vendor": "nvidia",
      "min_compute_capability": "7.5",
      "examples": ["RTX 2080", "T4", "RTX 2060"],
      "cuda_version": "12.4"
    },
    "ascend_910b": {
      "vendor": "huawei",
      "soc_version": "Ascend910B",
      "cann_version": "8.0.RC1"
    },
    "cpu_only": {
      "vendor": "cpu",
      "description": "CPU-only inference (slow, for development only)"
    }
  },
  "engine_profiles": {
    "vllm": {
      "description": "vLLM high-throughput inference engine with PagedAttention",
      "supported_hardware": ["nvidia_ampere", "nvidia_ada", "nvidia_turing"],
      "default_version": "0.12.0",
      "features": ["continuous_batching", "paged_attention", "tensor_parallel"]
    },
    "tensorrt": {
      "description": "TensorRT-LLM optimized inference engine",
      "supported_hardware": ["nvidia_ampere", "nvidia_ada", "nvidia_turing"],
      "default_version": "0.9.0",
      "features": ["static_batching", "int8_quantization", "inflight_fusion"]
    },
    "mindie": {
      "description": "华为MindIE Ascend-optimized inference engine",
      "supported_hardware": ["ascend_910b"],
      "default_version": "1.0",
      "features": ["ascend_optimized", "multi_stream"]
    }
  },
  "compatibility_matrix": [
    {
      "profile_id": "vllm-nvidia-cu124",
      "hardware": ["nvidia_ampere", "nvidia_ada", "nvidia_turing"],
      "engine": "vllm",
      "engine_version": "0.12.0",
      "python": ">=3.10,<3.13",
      "cuda": "12.4",
      "dependencies": {
        "core": [
          "vllm==0.12.0",
          "protobuf==4.25.3",
          "grpcio==1.76.0",
          "numpy==1.26.4",
          "accelerate==1.12.0",
          "transformers>=4.36.0,<5.0.0"
        ],
        "torch": [
          "--extra-index-url https://download.pytorch.org/whl/cu124",
          "torch==2.9.0",
          "torchvision==0.24.0",
          "torchaudio==2.9.0"
        ],
        "performance": [
          "triton==3.5.0",
          "xformers==0.0.29"
        ]
      },
      "env_vars": {
        "VLLM_GPU_MEMORY_UTILIZATION": "0.85",
        "VLLM_WORKER_MULTIPROC_METHOD": "spawn"
      },
      "warnings": []
    },
    {
      "profile_id": "tensorrt-nvidia-cu124",
      "hardware": ["nvidia_ampere", "nvidia_ada", "nvidia_turing"],
      "engine": "tensorrt",
      "engine_version": "0.9.0",
      "python": ">=3.10,<3.12",
      "cuda": "12.4",
      "dependencies": {
        "core": [
          "tensorrt-llm==0.9.0",
          "tensorrt==9.3.0",
          "protobuf==4.25.3"
        ],
        "torch": [
          "--extra-index-url https://download.pytorch.org/whl/cu124",
          "torch==2.9.0"
        ]
      },
      "env_vars": {
        "TRT_ENGINE_CACHE": "1"
      },
      "warnings": [
        "Requires model conversion to TRT format before inference"
      ]
    },
    {
      "profile_id": "mindie-ascend-910b",
      "hardware": ["ascend_910b"],
      "engine": "mindie",
      "engine_version": "1.0",
      "python": ">=3.10,<3.11",
      "cann": "8.0.RC1",
      "dependencies": {
        "core": [
          "mindie==1.0"
        ]
      },
      "env_vars": {
        "ASCEND_RT_VISIBLE_DEVICES": "0"
      },
      "warnings": [
        "Requires CANN 8.0.RC1 to be pre-installed"
      ]
    },
    {
      "profile_id": "vllm-cpu-dev",
      "hardware": ["cpu_only"],
      "engine": "vllm",
      "engine_version": "0.12.0",
      "python": ">=3.10,<3.13",
      "cuda": null,
      "dependencies": {
        "core": [
          "vllm==0.12.0",
          "protobuf==4.25.3",
          "numpy==1.26.4"
        ],
        "torch": [
          "torch==2.9.0+cpu",
          "torchvision==0.24.0+cpu"
        ]
      },
      "env_vars": {},
      "warnings": [
        "CPU-only mode is extremely slow, for development only"
      ]
    }
  ],
  "base_dependencies": [
    "pydantic>=2.0.0,<3.0.0",
